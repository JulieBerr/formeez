<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="3"
    android:columnCount="3"
    >

    <ImageButton
        android:id="@+id/carre"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/carre"
        android:layout_column="2"
        android:layout_row="2"
         />

    <ImageButton
        android:id="@+id/cercle"
        android:layout_width="113dp"
        android:layout_height="141dp"
        android:layout_row="2"
        android:layout_column="0"
        android:src="@drawable/cercle" />

    <ImageButton
        android:id="@+id/triangle"
        android:layout_width="146dp"
        android:layout_height="152dp"
        android:layout_row="2"
        android:layout_column="1"
        android:src="@drawable/triangle" />

    <ImageButton
        android:id="@+id/blanc1"
        android:layout_width="150dp"
        android:layout_height="280dp"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/blanc" />

    <ImageButton
        android:id="@+id/blanc2"
        android:layout_width="150dp"
        android:layout_height="278dp"
        android:layout_row="0"
        android:layout_column="1"
        android:src="@drawable/blanc" />

    <ImageButton
        android:id="@+id/blanc3"
        android:layout_width="150dp"
        android:layout_height="278dp"
        android:layout_row="0"
        android:layout_column="2"
        android:src="@drawable/blanc" />

    <ImageButton
        android:id="@+id/blanc4"
        android:layout_width="150dp"
        android:layout_height="298dp"
        android:layout_row="1"
        android:layout_column="0"
        android:src="@drawable/blanc" />

    <ImageButton
        android:id="@+id/blanc5"
        android:layout_width="150dp"
        android:layout_height="298dp"
        android:layout_row="1"
        android:layout_column="1"
        android:src="@drawable/blanc" />

    <ImageButton
        android:id="@+id/blanc6"
        android:layout_width="150dp"
        android:layout_height="298dp"
        android:layout_row="1"
        android:layout_column="2"
        android:src="@drawable/blanc" />

</GridLayout>
